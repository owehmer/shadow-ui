{
  "compileOnSave": false,
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "rootDir": ".",
    "sourceMap": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "paths": {
      "@shadowui/forms": [
        "projects/forms/src/public_api.ts"
      ],
      "@shadowui/dialog": [
        "projects/dialog/src/public_api.ts"
      ],
      "@shadowui/utils": [
        "dist/utils/public_api.d.ts",
        "projects/utils/src/public_api.ts"
      ],
      "forms": [
        "dist/forms"
      ],
      "forms/*": [
        "dist/forms/*"
      ],
      "dialog": [
        "dist/dialog"
      ],
      "dialog/*": [
        "dist/dialog/*"
      ],
      "utils": [
        "dist/utils"
      ],
      "utils/*": [
        "dist/utils/*"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
